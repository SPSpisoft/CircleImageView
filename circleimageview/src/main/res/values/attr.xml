<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">

        <attr name="android:src" />

        <attr name="civ_corner_radius" format="dimension" />
        <attr name="civ_left_top_radius" format="dimension" />
        <attr name="civ_right_top_radius" format="dimension" />
        <attr name="civ_left_bottom_radius" format="dimension" />
        <attr name="civ_right_bottom_radius" format="dimension" />

        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />

        <!--        <attr name="civ_point_color" format="color" />-->

        <attr name="civ_padding" format="dimension" />

        <attr name="civ_ratio_width" format="integer" />
        <attr name="civ_ratio_height" format="integer" />

        <attr name="civ_type" format="enum">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>

        <attr name="civ_point_prop" format="float" />
        <attr name="civ_point" format="enum">
            <enum name="reset" value="0" />
            <enum name="set" value="1" />
            <enum name="warning" value="2" />
            <enum name="error" value="3" />
        </attr>
    </declare-styleable>
</resources>